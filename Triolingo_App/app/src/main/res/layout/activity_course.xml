<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/unit_card_view_not"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:clipToOutline="false"
        android:visibility="visible"
        app:cardBackgroundColor="@android:color/darker_gray"
        app:cardCornerRadius="@dimen/border_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/course_id_not"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#8BC34A"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/course_rate_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Learn code first"
            android:textColor="#FBFBFB" />

        <TextView
            android:id="@+id/course_name_not"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Unit 1"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/course_desc_not"
            android:layout_width="122dp"
            android:layout_height="45dp"
            android:layout_marginLeft="210dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/grey"
            android:text="@string/btn_desc"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:cornerRadius="@dimen/border_radius" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/unit_card_view"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="10dp"
        android:clipToOutline="false"
        android:visibility="gone"
        app:cardBackgroundColor="#8BC34A"
        app:cardCornerRadius="@dimen/border_radius"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textColor="#8BC34A"
            tools:visibility="invisible" />

        <TextView
            android:id="@+id/course_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Learn code first"
            android:textColor="#FCFFFFFF" />

        <TextView
            android:id="@+id/course_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Unit 1"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_backToAccount"
            android:layout_width="122dp"
            android:layout_height="45dp"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4CAF50"
            android:text="@string/btn_desc"
            android:textSize="12sp"
            app:cornerRadius="@dimen/border_radius" />
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>