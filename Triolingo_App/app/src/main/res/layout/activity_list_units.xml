<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEF3E8"
    android:backgroundTint="#FAFFFFFF"
    tools:context=".Units.ListUnits">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewUnit"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:cardBackgroundColor="#8BC34A"
        app:cardCornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:text="Learn code first"
            android:textColor="#FCFFFFFF" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:text="Unit 1"
            android:textColor="#FBFBFB"
            android:textSize="20sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="122dp"
            android:layout_height="45dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#4CAF50"
            android:text="GUIDEBOOK"
            android:textSize="12sp"
            app:cornerRadius="15dp" />
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/button4"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="276dp"
        android:layout_marginEnd="209dp"
        android:background="@drawable/circle"
        android:text="Lesson1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewUnit" />

    <Button
        android:id="@+id/button3"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="209dp"
        android:background="@drawable/circle"
        android:text="Lesson1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewUnit" />

    <Button
        android:id="@+id/button2"
        android:layout_width="64dp"
        android:layout_height="54dp"
        android:layout_marginStart="108dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="209dp"
        android:background="@drawable/circle"
        android:text="Lesson1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardViewUnit" />
</androidx.constraintlayout.widget.ConstraintLayout>